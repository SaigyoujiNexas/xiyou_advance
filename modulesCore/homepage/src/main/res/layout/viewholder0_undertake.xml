<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/focusCard"
        android:layout_width="80dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/text_color_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="20dp">
        <TextView
            android:text="+ 关注"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:textSize="16sp"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/focusCard"
        android:textColor="@color/black"
        android:text="Hello World"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/focusCard"
        app:layout_constraintBottom_toBottomOf="@id/focusCard"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_viewholder0_undertake"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/focusCard"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>