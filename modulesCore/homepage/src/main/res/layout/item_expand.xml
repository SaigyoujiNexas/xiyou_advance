<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_item_expand"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/img1"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title_item_expand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/img_item_expand"
        app:layout_constraintTop_toTopOf="@id/img_item_expand"
        app:layout_constraintBottom_toBottomOf="@id/img_item_expand"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="1.1 HelloWorld"
        android:layout_margin="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>