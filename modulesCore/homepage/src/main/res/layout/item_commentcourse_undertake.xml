<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_comment_undertake"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="25dp">
        <ImageView
            android:src="@drawable/img1"
            android:id="@+id/userimg_comment_undertake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/username_comment_undertake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/card_comment_undertake"
        app:layout_constraintTop_toTopOf="@id/card_comment_undertake"
        android:text="USERNAME"
        android:textColor="@color/text_color_red"
        android:layout_marginLeft="30dp"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/sendtime_comment_undertake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username_comment_undertake"
        android:textColor="@color/gray0"
        app:layout_constraintLeft_toLeftOf="@id/username_comment_undertake"
        android:text="4-12"
        android:textSize="9sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/commenttext_undertake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sendtime_comment_undertake"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/username_comment_undertake"
        android:layout_marginTop="13dp"
        android:text="我是评论"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>